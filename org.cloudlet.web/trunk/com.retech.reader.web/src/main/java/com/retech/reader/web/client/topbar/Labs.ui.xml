<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:icon="urn:import:com.goodow.web.view.wave.client">
  <ui:with field='res' type='com.goodow.web.view.wave.client.title.WaveTitleResources' />
  <ui:style>
    .title {
      border-bottom: 1px solid #e5e5e5;
      height: 39px;
    }
    
    .lineAndArcDiv {
      position: absolute;
      top: 0;
      right: 0;
      width: 39px;
      height: 24px;
      -webkit-border-top-right-radius: 5px;
      background-image: -webkit-gradient(linear, literal("left top"), literal("left bottom"),
        from(hsl(211, 85%, 66%) ), to(hsl(212, 58%, 58%) ) );
    }
    
    .lineAndArcDiv>div:LAST-CHILD:HOVER {
      -webkit-border-top-right-radius: 5px;
    }
    
    .lineAndArcDiv>div:LAST-CHILD {
      padding: 0 17px;
    }
    
    @sprite .waveLogo {
      gwt-image: "waveLogo";
      position: absolute;
      left: 8px;
      top: 8px;
    }
    
    @sprite .arc {
      gwt-image: "arc";
      position: absolute;
      left: 0;
      height: 24px;
      width: 24px;
    }
    
    .arc+div>img {
      vertical-align: middle;
    }
    
    .cell {
    }
    
    .cell>div>div>div {
      color: blue;
      float: left;
      width: 100%;
    }
  </ui:style>

  <ui:image field="waveLogo"></ui:image>
  <ui:image field="arc"></ui:image>
  <g:HTMLPanel>
    <div class="{style.title}">
      <div class="{style.lineAndArcDiv}">
        <div class="{style.arc}"></div>
        <icon:IconButtonTemplate addStyleNames="{res.css.waveTitleDiv}"
          ui:field="minimize"></icon:IconButtonTemplate>
      </div>
      <div class="{style.waveLogo}"></div>
    </div>
    <g:SimplePanel ui:field="simplePanel" addStyleNames="{style.cell}"></g:SimplePanel>
  </g:HTMLPanel>
</ui:UiBinder> 