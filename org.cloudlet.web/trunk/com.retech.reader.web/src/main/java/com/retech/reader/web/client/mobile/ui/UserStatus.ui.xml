<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .root {
      height: 45px;
      padding: 7px 4px 4px 2px;
      font-family: Arial, sans-serif;
    }
    
    .div_user {
      float: left;
      padding: 0 2px 7px 3px;
      text-decoration: none;
    }
    
    .div_user>div {
      border-width: 1px;
      position: relative;
      border-style: solid;
      cursor: pointer;
      border-color: hsl(215, 30%, 79%);
    }
    
    @sprite .userImage {
      width: 40px;
      height: 40px;
      gwt-image: 'UserStatusUnknown';
      -khtml-user-drag: none;
      background-size: contain;
    }
    
    @sprite .online {
      right: -4px;
      bottom: -3px;
      overflow: hidden;
      position: absolute;
      gwt-image: 'UserStatusOnline';
    }
    
    .div_box {
      width: 60px;
      float: left;
      height: 49px;
      padding-left: 4px;
      display: none;
    }
    
    @sprite .div_add {
      margin-top: 9px;
      cursor: default;
      opacity: 0.35;
      gwt-image: 'UserStatusAdd';
    }
    
    @sprite .div_more {
      margin-left: 33px;
      margin-top: -21px;
      cursor: pointer;
      gwt-image: 'UserStatusMore';
    }
    
    .box { /*margin-left: -26px;*/
      float: left;
    }
    
    .box_font {
      float: left;
      width: 156px;
      margin-left: 8px;
      -webkit-border-radius: 5px;
      padding: 6px 7px 5px 7px;
      border: 1px solid hsl(58, 21%, 54%);
      background-color: hsl(59, 95%, 92%);
      -webkit-box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.15);
    }
    
    @sprite .div_font {
      position: relative;
      left: -15px;
      display: block;
      margin: 0 -15px 0 0;
      padding: 0 0 0 17px;
      width: auto;
      height: auto;
      gwt-image: 'UserStatusLeftImage';
      background-repeat: no-repeat;
      background-position: 0 50%;
    }
    
    @sprite .div_close {
      gwt-image: 'UserStatusClose';
      cursor: pointer;
      left: -18px;
      margin-top: 5px;
      position: relative;
      z-index: 1000;
    }
    
    @sprite .div_close:hover {
      gwt-image: 'UserStatusCloseHover';
    }
  </ui:style>
  <ui:image field="UserStatusUnknown"></ui:image>
  <ui:image field="UserStatusOnline"></ui:image>
  <ui:image field="UserStatusAdd"></ui:image>
  <ui:image field="UserStatusMore"></ui:image>
  <ui:image field="UserStatusClose"></ui:image>
  <ui:image field="UserStatusCloseHover"></ui:image>
  <ui:image field="UserStatusLeftImage"></ui:image>
  <g:HTMLPanel addStyleNames="{style.root}">
    <div class="{style.div_user}">
      <div>
        <div class="{style.userImage}"></div>
        <div class="{style.online}"></div>
      </div>
    </div>
    <div class="{style.div_user}">
      <div>
        <div class="{style.userImage}"></div>
        <div class="{style.online}"></div>
      </div>
    </div>
    <div class="{style.div_box}">
      <div class="{style.div_add}" title="Add user or group to wave"></div>
      <div class="{style.div_more}" title="More actions"></div>
    </div>
    <div class="{style.box}">
      <div class="{style.box_font}">
<!--         <span> -->
<!--           You can now add -->
<!--           <strong> -->
<!--             any -->
<!--             <br /> -->
<!--             email address -->
<!--           </strong> -->
<!--           to a wave! -->
<!--         </span> -->
        <span class="{style.div_font}">正在读此书.</span>
      </div>
      <div class="{style.div_close}"></div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>