<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:w="urn:import:com.google.gwt.widget.client" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:r="urn:import:com.retech.reader.web.client.mobile.ui">

  <ui:style>
    .vbox {
      display: -webkit-box;
      -webkit-box-orient: vertical;
      height: 100%;
    }
    
    .top {
      display: -webkit-box;
      -webkit-box-pack: center;
      -webkit-box-align: center;
      height: 2.5em;
    }
    
    .bottom {
      display: -webkit-box;
      -webkit-box-pack: center;
      -webkit-box-align: center;
      height: 2.5em;
    }
    
    .center {
      -webkit-box-flex: 1;
      overflow: scroll;
      overflow-x: auto;
    }
  </ui:style>

  <g:HTMLPanel>
    <div class="{style.vbox}">
      <!-- <div class="{style.top}"><g:Button>页眉</g:Button></div> -->
      <div class="{style.center}">
        <g:HTML ui:field="html"></g:HTML>
      </div>
      <!-- <div class="{style.bottom}"><g:Button>页脚</g:Button></div> -->
    </div>
  </g:HTMLPanel>

</ui:UiBinder> 
