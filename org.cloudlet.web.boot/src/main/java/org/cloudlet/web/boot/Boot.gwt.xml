<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='boot'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.activity.Activity'/>
  <inherits name='com.google.gwt.place.Place'/>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <inherits name='com.google.gwt.editor.Editor'/>
  <inherits name='com.google.web.bindery.requestfactory.RequestFactory'/>
  <inherits name='com.google.gwt.inject.Inject'/>
  
  <!-- Default Locale. -->
  <extend-property name="locale" values="zh"/>
  <set-property name="locale" value="zh"/>
  <set-property-fallback name="locale" value="zh"/>
  
  <set-property name="user.agent" value="safari"/>
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.cloudlet.web.boot.client.Boot'/>
  
  <define-configuration-property name="client.ioc.ginModules" is-multi-valued="true" />
  <define-configuration-property name="shared.ioc.ginModules" is-multi-valued="true" />
  
  <!-- Specify the paths for translatable code                    -->
  <source path="" includes="*.java" />
  <source path='client' />
  <source path='shared' />
</module>
