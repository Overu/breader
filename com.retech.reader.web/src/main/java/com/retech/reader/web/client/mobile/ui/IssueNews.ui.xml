<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:app="urn:import:com.retech.reader.web.client.mobile.ui">
  <ui:with field='res' type='com.retech.reader.web.client.style.ReaderResources' />
  <ui:style>
    .label {
      color: #666;
      font-size: 10pt;
      padding-bottom: 3px;
      padding: 10px;
    }
    
    .div_news {
      display: -webkit-box;
      -webkit-box-orient: horizontal;
    }
    
    .div_image {
      padding: 10px;
      width: 30%;
      height: 60%;
      max-height: 260px;
      max-width: 200px;
    }
    
    .div_intro {
      -webkit-box-flex: 1;
      margin: 0 0 5px 5px;
    }
    
    .toolbar {
      padding: 10px 0 10px 0;
    }
    
    .button {
      width: 100%;
    }
    
    .div_viewcount {
      margin-left: 35px;
    }
    
    .div_margin {
      margin-left: 25px;
      -webkit-box-flex: 1;
    }
    
    .div_styleauto {
      overflow: auto;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.div_styleauto}">

    <div class="{style.div_news}">
      <div class="{style.div_image}">
        <g:Image ui:field="image" width="100%"></g:Image>
      </div>
      <div class="{style.div_intro}">
        <div class="{style.label}">更新时间</div>
        <div ui:field="datetimas"></div>
        <div class="{style.label}">浏览次数</div>
        <div ui:field="viewcount" class="{style.div_viewcount}"></div>
        <div class="{style.label}">书目分类</div>
        <div ui:field="categorys" class="{style.div_margin}"></div>
      </div>
    </div>
    <g:SimplePanel addStyleNames="{style.toolbar}" ui:field="toolbar">
    </g:SimplePanel>
    <div>
      <div class="{style.label}">简介</div>
      <div ui:field="detail" class="{style.div_intro}"></div>
    </div>

  </g:HTMLPanel>
</ui:UiBinder>
