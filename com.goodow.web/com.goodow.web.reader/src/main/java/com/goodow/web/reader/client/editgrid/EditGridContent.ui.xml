<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .root {
      display: block;
      position: absolute;
      height: auto;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      padding: 20px 20px 0 20px;
      overflow: hidden;
    }
    
    .title {
      white-space: nowrap;
      max-width: 90%;
      text-overflow: ellipsis;
      overflow: hidden;
      display: block;
      margin: 0 0 10px 0;
      font-size: 14px;
      line-height: 1.5;
      color: black;
    }
    
    @sprite 
    .des {
      gwt-image: "quote";
      padding-left: 30px;
      color: #666;
      background-attachment: scroll !important;
      background-position-x: 0px !important;
      background-position-y: 0px !important;
      background-color: transparent !important;
    }
    
    .snippet {
      line-height: 2;
      font-size: 13px;
    }
    
    @sprite 
    .fader {
      gwt-image: "cellbottom";
      display: block;
      width: 100%;
      height: 30px;
      position: absolute;
      bottom: 0;
      left: 0;
    }
  </ui:style>
  <ui:image field="cellbottom" />
  <ui:image field="quote" />

  <g:HTMLPanel addStyleNames="{style.root}">
    <div ui:field="titleElm" class="{style.title}"></div>
    <div ui:field="desElm" class="{style.des}"></div>
    <div ui:field="snippetElm" class="{style.snippet}"></div>
    <div class="{style.fader}"></div>
  </g:HTMLPanel>
</ui:UiBinder>