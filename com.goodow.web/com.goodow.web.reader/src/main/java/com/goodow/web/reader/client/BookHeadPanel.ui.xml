<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:s="urn:import:com.google.gwt.dom.builder.shared">

  <ui:style>
    .root {
      display: -webkit-box;
      -webkit-box-pack: justify;
      border-bottom: 4px solid rgb(26, 150, 198);
      overflow: hidden;
      background: literal("-webkit-gradient(linear, left top, left bottom, color-stop(0%, rgb(71, 71, 71)), color-stop(100%, rgb(17, 17, 17)))"
        );
    }
    
    .root>div:FIRST-CHILD {
      display: -webkit-box;
      -webkit-box-align: center;
      margin-left: 60PX;
    }
    
    .root>div:LAST-CHILD {
      display: -webkit-box;
      margin-right: 60PX;
    }
    
    .title {
      padding: 0;
      color: white;
      text-shadow: 0 1px 2px black;
      font-weight: bold;
      margin-right: 10px;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.root}">
    <g:HTMLPanel ui:field="leftPanel">
      <span class="{style.title}">睿泰书城</span>
    </g:HTMLPanel>
    <g:HTMLPanel ui:field="rightPanel"></g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>