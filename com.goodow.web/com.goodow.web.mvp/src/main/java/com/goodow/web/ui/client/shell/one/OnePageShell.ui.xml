<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:com.goodow.web.ui.client.shell.one"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat' ui:generateLocales='default'>

	<ui:style>
		.root {
		}
		
		.header {
	
		}
		
		.sideBar {
			width: 194px;
		}
		.center {
			margin-right: 10px;
			padding: 10px;
			background: #FFF;
			border-width: 0px 1px 1px 1px;
			border-color: #CCC;
			border-style: solid;
		}
		.footer {
	
		}
	</ui:style>

	<g:HTMLPanel ui:field="root" styleName="{style.root}">
		<!-- 搜索区 -->
		<s:ActivityPanel ui:field='search' styleName="{style.header}">
		</s:ActivityPanel>

		<g:HTMLPanel>
			<s:ActivityPanel ui:field='nav' styleName="{style.sideBar}" side ="left"/>
			<s:ActivityPanel ui:field='center' styleName="{style.center}" />
		</g:HTMLPanel>

		<!-- 页脚 -->
		<s:ActivityPanel ui:field='footer' styleName="{style.footer}"/>
	</g:HTMLPanel>

</ui:UiBinder> 