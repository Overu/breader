<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:icon="urn:import:com.goodow.web.view.wave.client">
  <ui:style>
    .root {
      padding: 9px 13px;
      position: relative;
      overflow: visible;
      outline: 0;
    }
    
    .divider {
      position: absolute;
      top: -1px;
      left: 13px;
      right: 13px;
      border-bottom: 1px dotted #b3b3b3;
    }
    
    .root:focus>.divider {
      display: none;
    }
    
    @sprite .popupContext {
      gwt-image: "waveBlipPopupContextEmpty";
      overflow: visible;
      position: fixed;
      z-index: 50;
      opacity: 0;
      -webkit-transition: opacity 300ms ease-in-out;
    }
    
    @sprite .popupContext::before {
      gwt-image: "waveBlipPopupContextLeft";
      content: "";
      float: left;
      margin-left: -7px;
    }
    
    @sprite .popupContext::after {
      gwt-image: "waveBlipPopupContextRight";
      content: "";
      float: left;
      margin-right: -9px;
    }
    
    .popupContext>* {
      float: left;
      cursor: pointer;
    }
    
    .popupContextIcon {
      margin-top: 3px;
    }
    
    .popupContext>span {
      font-size: 8pt;
      padding: 5px 6px 0 2px;
    }
    
    .authorBox {
      display: inline;
      line-height: 1.35;
      overflow: hidden;
      cursor: default;
      color: gray;
    }
    
    .authorBox>* {
      position: relative;
      z-index: 2;
    }
    
    .contributorPics {
      margin-right: 6px;
      float: left;
      height: 31px;
      overflow: hidden;
      position: relative;
      top: 2px;
    }
    
    .contributorPics>img {
      width: 27px !important;
      height: 27px !important;
    }
    
    .authorName {
      float: left;
      font-weight: bold;
      padding-right: 0.5em;
    }
    
    .pubTime {
      padding-left: 0.5em;
      float: right;
    }
    
    .moreActions {
      cursor: pointer;
      float: right;
    }
    
    .moreActions>* {
      vertical-align: bottom;
    }
    
    .editor {
      min-height: 33px;
      line-height: 1.35;
      white-space: pre-wrap;
      position: relative;
      z-index: 1;
    }
    
    .unRead {
      position: absolute;
      top: 3px;
      bottom: 3px;
      left: 5px;
      width: 3px;
      background-color: hsl(71, 100%, 37%);
      -webkit-border-radius: 2px;
      opacity: 0;
      -webkit-transition: opacity 300ms ease-in-out;
    }
    
    .replyRoot {
      position: relative;
      overflow: visible;
      z-index: 2;
    }
    
    .replyBox {
      z-index: 1;
      position: absolute;
      left: 0;
      right: 0;
      top: -9px;
      bottom: -9px;
      opacity: 0;
      cursor: pointer;
      -webkit-transition: opacity 0.1s linear;
    }
    
    .replyBox:hover {
      opacity: 1;
      -webkit-transition: opacity 0.4s linear;
    }
    
    .replyPic {
      position: absolute;
      top: -3px;
      left: 36px;
    }
    
    .replyBlock {
      position: absolute;
      left: 51px;
      right: 12px;
      top: 5px;
      bottom: 6px;
      border: 2px solid hsl(212, 58%, 58%);
      -webkit-border-radius: 3px;
      background-color: white;
    }
    
    .overlay {
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      -webkit-border-radius: 5px;
      border: 2px solid hsl(0, 0%, 60%);
    }
    
    .root:focus>.overlay {
      border: 2px solid hsl(82, 85%, 30%);
    }
  </ui:style>
  <ui:image field="waveBlipPopupContextEmpty" repeatStyle="Horizontal" />
  <ui:image field="waveBlipPopupContextLeft" />
  <ui:image field="waveBlipPopupContextRight" />
  <g:FlowPanel>
    <g:HTMLPanel addStyleNames="{style.root}" ui:field="root">
      <div class="{style.divider}" ui:field="dottedDivider"></div>
      <div class="{style.popupContext}" ui:field="popupContext">
        <icon:IconButtonTemplate addStyleNames="{style.popupContextIcon}"
          ui:field="popupContextIconReply" title="Reply" />
        <span>回复</span>
        <icon:IconButtonTemplate addStyleNames="{style.popupContextIcon}"
          ui:field="popupContextIconEdit" title="Edit this message" />
        <span>编辑</span>
      </div>
      <div class="{style.authorBox}" ui:field="authorBox">
        <g:FlowPanel addStyleNames="{style.contributorPics}" ui:field="contributorPics"></g:FlowPanel>
        <div class="{style.authorName}" ui:field="authorName"></div>
        <icon:IconButtonTemplate addStyleNames="{style.moreActions}"
          ui:field="moreActions" title="More actions"></icon:IconButtonTemplate>
        <div class="{style.pubTime}" ui:field="pubTime"></div>
      </div>
      <div class="{style.editor}" ui:field="editor"></div>
      <div class="{style.unRead}" ui:field="unRead"></div>
      <div class="{style.overlay}" ui:field="overlay"></div>
    </g:HTMLPanel>
    <g:HTMLPanel addStyleNames="{style.replyRoot}" ui:field="replyPanel">
      <div class="{style.replyBox}" title="Insert reply here">
        <icon:IconButtonTemplate addStyleNames="{style.replyPic}" ui:field="replyPic"></icon:IconButtonTemplate>
        <div class="{style.replyBlock}"></div>
      </div>
    </g:HTMLPanel>
  </g:FlowPanel>
</ui:UiBinder>