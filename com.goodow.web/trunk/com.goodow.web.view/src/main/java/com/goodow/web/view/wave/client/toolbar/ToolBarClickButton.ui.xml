<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res" type="com.goodow.web.view.wave.client.toolbar.WaveToolBarResources"></ui:with>
  <ui:style>
    .waveToolbarButton {
      font-size: 8pt;
      margin-right: -1px;
      position: relative;
      cursor: pointer;
      overflow: hidden;
      -webkit-box-flex: 1;
      min-width: 100%;
      white-space: nowrap;
      padding: 0 4px;
    }
    
    .waveToolbarVisualElement>img {
      vertical-align: middle;
    }
    
    .waveTextElement {
      margin-left: 4px;
      display: none;
    }
    
    @sprite .waveToolbarDropDownArrow {
      gwt-image: "waveToolbarDropDownArrow";
      margin-left: 5px;
      display: none;
    }
    
    @sprite .waveToolbarDivider {
      gwt-image: "waveToolbarDivider";
      width: 1px;
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
    }
     #overlayBorder {
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
    }
    
    #overlayBorder:hover {
      border: 1px solid rgb(127, 127, 127);
    }
  </ui:style>
  <ui:image field="waveToolbarDropDownArrow" />
  <ui:image field="waveToolbarDivider" />
  <g:HTMLPanel ui:field="root" addStyleNames="{style.waveToolbarButton}">
    <div ui:field="visualElement" class="{style.waveToolbarVisualElement}"></div>
    <span ui:field="textElement" class="{style.waveTextElement}" />
    <div ui:field="dropDownArrow" class="{style.waveToolbarDropDownArrow}" />
    <div ui:field="toolbarDivider" class="{style.waveToolbarDivider}" />
    <div id='overlayBorder' />
  </g:HTMLPanel>
</ui:UiBinder> 