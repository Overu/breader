<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:shell="urn:import:com.goodow.wave.client.shell">
  <ui:style>
    .shell {
      overflow: auto;
      margin: 2px 0 0 7px;
    }
    
    .topBar {
      height: 40px;
    }
  </ui:style>
  <g:HTMLPanel addStyleNames='{style.shell}'>
    <g:FlowPanel addStyleNames='{style.topBar}' ui:field="topBar">
    </g:FlowPanel>
    <!-- <shell:WidgetContainer ui:field="container"></shell:WidgetContainer> -->
    <g:SimplePanel ui:field="container"></g:SimplePanel>
  </g:HTMLPanel>
</ui:UiBinder>