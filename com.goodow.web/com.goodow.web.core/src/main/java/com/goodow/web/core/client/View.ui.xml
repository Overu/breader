<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.goodow.web.ui.client">
	<ui:style>
		.root {
			margin: 10px;
			border: 1px solid gray;
		}
		
		.titleBar {
			border-bottom: 1px solid gray;
			background-color: #cccccc;
			padding: 5px;
		}
		
		.toolBar {
			float: right;
		}
		
		.container {
			padding: 5px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="root" styleName="{style.root}">
		<g:HTMLPanel ui:field="titleBar" styleName="{style.titleBar}">
			<g:HTMLPanel ui:field="toolBar" styleName="{style.toolBar}">
				<g:Button ui:field="closeBtn">关闭</g:Button>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="container" styleName="{style.container}"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>